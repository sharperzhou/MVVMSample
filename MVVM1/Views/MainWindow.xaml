<Window x:Class="MVVM1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <StackPanel>
        <Button Content="保存" Margin="5" Command="{Binding SaveCommand}" />
        <TextBox Margin="5" Text="{Binding Input1}" />
        <TextBox Margin="5" Text="{Binding Input2}" />
        <TextBox Margin="5" Text="{Binding Result}" IsReadOnly="True" />
        <Button Content="计算" Margin="5" Command="{Binding CalcCommand}" />
    </StackPanel>
</Window>